<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0-windows</TargetFramework>
    <OutputType>WinExe</OutputType>
    <UseWindowsForms>true</UseWindowsForms>
    <IncludeSymbols>true</IncludeSymbols>
    <DebugType>full</DebugType>
    <LangVersion>12.0</LangVersion>
    <PlatformTarget>AnyCPU</PlatformTarget>

    <Version>2.0.10</Version>
    <Title>SnakeTail</Title>
    <Description>Windows Tail Utility to Monitor Trace Log Files</Description>
    <Company>SnakeNest.com</Company>
    <Authors>Rolf Kristensen</Authors>
    <CurrentYear>$([System.DateTime]::Now.ToString(yyyy))</CurrentYear>
    <Copyright>Copyright (c) 2015-$(CurrentYear) - http://snakenest.com/snaketail/</Copyright>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <ProjectGuid>{003BAF38-EE59-46AB-A90E-46B51791CDEA}</ProjectGuid>
    <ApplicationIcon>Icons\Snake.ico</ApplicationIcon>
    <!-- 不嵌入清单，避免 Unknown Hard Error；DPI 由 ApplicationConfiguration.Initialize 在代码中设置 -->
    <!-- <ApplicationManifest>App.manifest</ApplicationManifest> -->
    <ApplicationHighDpiMode>PerMonitorV2</ApplicationHighDpiMode>
    <EnableNETAnalyzers>true</EnableNETAnalyzers>
    <RunAnalyzersDuringBuild>true</RunAnalyzersDuringBuild>
    <RepositoryUrl>https://github.com/snakefoot/snaketail-net</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <NoWarn>CA2022;SYSLIB0014</NoWarn>
    <GenerateResourceWarnOnBinaryFormatterUse>false</GenerateResourceWarnOnBinaryFormatterUse>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="System.Data.SQLite.Core" Version="1.0.119" />
    <PackageReference Include="System.Management" Version="8.0.0" />
    <PackageReference Include="System.ServiceProcess.ServiceController" Version="8.0.0" />
  </ItemGroup>

  <ItemGroup>
    <None Include="Icons\log.ico" />
    <Content Include="Icons\bullet ball glass green.ico" />
    <Content Include="Icons\bullet ball glass yellow.ico" />
    <Content Include="Icons\Error.png" />
    <Content Include="Icons\Info.png" />
    <Content Include="Icons\Snake.ico" />
    <Content Include="Icons\Warning.png" />
  </ItemGroup>

</Project>